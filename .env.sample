# .env.sample
# Copy this file to .env and fill in your values before running docker compose up.

# ── HOST CONFIG ────────────────────────────────────────────────────────────────
# These are used by docker-compose.yml on the host, not passed into the container.

# Port to expose the app on (what you type in your browser, e.g. http://localhost:8080)
PORT=8080

# Host folders to mount into the container (relative or absolute paths)
LIBRARY_DIR=./library
DATA_DIR=./data


# ── CONTAINER CONFIG ───────────────────────────────────────────────────────────
# These are passed into the container via env_file.

# REQUIRED: Generate strong random secrets before running in production.
# Command: openssl rand -hex 32
JWT_SECRET=change-me-before-running
JWT_REFRESH_SECRET=change-me-before-running

# CORS origin — must match the URL you browse to (protocol + host + port).
# Default matches PORT=8080 above. If you change PORT, update this too.
CORS_ORIGIN=http://localhost:8080

# Container-internal paths — only change these if you remapped the volume paths above.
DB_PATH=/data/gridfinity.db
IMAGE_DIR=/data/images
LIBRARIES_DIR=/libraries

# Logging level: fatal | error | warn | info | debug | trace
LOG_LEVEL=info
