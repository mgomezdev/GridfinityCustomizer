{
  "name": "gridfinity-customizer",
  "private": true,
  "version": "2.1.0",
  "description": "Web-based visual design tool for creating custom Gridfinity modular storage layouts with drag-and-drop, reference images, and bill of materials generation",
  "repository": {
    "type": "git",
    "url": "https://github.com/mgomezdev/GridfinityCustomizer"
  },
  "homepage": "https://github.com/mgomezdev/GridfinityCustomizer#readme",
  "keywords": [
    "gridfinity",
    "3d-printing",
    "modular-storage",
    "organizer",
    "layout-tool",
    "react",
    "typescript",
    "vite"
  ],
  "author": "mgomezdev",
  "type": "module",
  "workspaces": [
    "shared",
    "server"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "vitest --exclude '**/e2e/**'",
    "test:run": "vitest run --exclude '**/e2e/**'",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "server:dev": "npm run dev --workspace=server",
    "server:dev:test": "npm run dev:test --workspace=server",
    "server:build": "npm run build --workspace=server",
    "server:seed": "npm run seed --workspace=server"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.90.21",
    "html2canvas": "^1.4.1",
    "jspdf": "^4.2.0",
    "jspdf-autotable": "^5.0.7",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@playwright/test": "^1.58.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "@vitest/ui": "^4.0.18",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "jsdom": "^27.4.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4",
    "vitest": "^4.0.18"
  }
}
